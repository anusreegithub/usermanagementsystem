<link rel="stylesheet"  type="text/css" href="/styles/userlogin.css">


<div class="container">
  <form id="loginForm" action="login" method="post">
    <div class="title">Login</div>
    <div class="input-box underline">
      <input type="text" name="email" id="email" placeholder="Enter Your Email" autocomplete="off">
      <div class="underline"></div>
    </div>
    <div class="input-box">
      <input type="password" name="password" id="password" placeholder="Enter Your Password">
      <div class="underline"></div>
    </div>
    <div class="input-box button">
      <input type="submit" name="" value="Login">
    </div>
     <input type="text" name="message" id="message" hidden>
  </form>
  <p>Don't have account? <a href="/register">Register</a></p>
</div>

<script>

  document.addEventListener('DOMContentLoaded', function () {

    document.getElementById('loginForm').addEventListener('submit', formValidate);
  })



  function formValidate(e) {
    e.preventDefault();


    var email = document.getElementById('email').value;
    var password = document.getElementById('password').value;


    if (email == '' ||  password == '') {

      swal({
        title: "All fields are required",
        text: "Please fill all the fields",
        icon: "warning",
        button: "Back",
      })
      return false;

    }
    else if (password.length < 6 || password.length > 20 ) {

      swal({  
        title: "Password must be at least 6 characters and less than 20 characters",
        text: "Please enter a valid password",
        icon: "warning",
        button: "Back",
      })
      return false; 

    }
   
    


 
        
     
 
    

    document.getElementById('loginForm').submit();
    
  }
  

</script>